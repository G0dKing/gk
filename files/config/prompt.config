#!/bin/bash
# prompt.sh (11.9.24)

set_prompt() {
    local user=$(whoami)
    local file=$source/init/colors.conf
    local host=$(hostname)
    local nhdir=/home/kali

    if [ -d "$nhdir" ]; then
        local host=nethunter
    fi

    if [[ -z "$sym_skull" ]]; then
        . $file
    fi

    if [[ "$user" == "root" ]]; then
        # root
        color1=$bold_yellow
        color2=$red
        color3=$yellow
        frame1="|:"
        frame2=":|"
        type="#"
        symbol="@"
    else
        color1=$cyan
        color2=$purpler
        color3=$bold_blue
        frame1="|:"
        frame2=":|"
        type="$"
        symbol="@"
    fi

    PS1="\[$color1\]$frame1\[$color2\]\u\[$color1\]${symbol}\[$color2\]${host}\[$color1\]$frame2\[$color3\]\w\[$color1\]$type\[$nc\] "

    export set_prompt_complete=true
}
