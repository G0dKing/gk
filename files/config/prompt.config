#!/bin/bash
# prompt.sh (11.9.24)

set_prompt() {
    local user=$(whoami)
    local file=$source/init/colors.conf
    local host=$(hostname)
    local nhdir=/home/kali
    local wslchk=/etc/wsl.conf

    if [ -d "$nhdir" ]; then
        local host=nethunter
    elif [ -f "$wslchk" ]; then
        local host=spectre
    fi

    if [[ -z "$sym_skull" ]]; then
        . $file
    fi

    if [[ "$user" == "root" ]]; then
        # root
        color1=$bold_yellow
        color2=$red
        color3=$yellow
        color4=$greenest
        frame1="|:"
        frame2=":|"
        type="#"
        symbol="@"
    elif [ "$ID" == "debian" ]; then
        host=devOps
        color1=$red
        color2=$blue
        color3=$bold_yellow
        color4=$red
        frame1="|:"
        frame2=":|"
        type="$"
        symbol="@"
    elif [[ "$user" == "kali" ]]; then
       	color1=$purpler
        color2=$bold_blue
        color3=$bold_green
        color4=$cyan
        frame1="|:"
        frame2=":|"
        type="$"
        symbol="â˜   "
    elif [ "$ID" == "ubuntu" ]; then
        color1=$cyan
        color2=$purpler
        color3=$bold_blue
        color4=$greenest
        frame1="|:"
        frame2=":|"
        type="$"
        symbol="@"
     fi

    PS1="\[$color1\]$frame1\[$color2\]\u\[$color1\]${symbol}\[$color2\]${host}\[$color1\]$frame2\[$color4\][\[$color3\]\w\[$color4\]]\[$color4\]$type\[$nc\] "

    export set_prompt_complete=true
}
