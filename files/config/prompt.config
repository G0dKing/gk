#!/bin/bash
# prompt.sh (7.4.24)

set_prompt() {
    local user=$(whoami)
    local file=$source/init/colors.conf
    local host=sojourney

    if [[ -z "$sym_skull" ]]; then
        . $file
    fi

    if [[ "$user" == "root" ]]; then
        color1=$yellow
        color2=$red
        frame1="|#"
        frame2="#|"
        symbol=$sym_skull
    else
        color1=$greener
        color2=$bold_cyan
        frame1=""
        frame2="|"
        symbol=""
        
    fi

    PS1="\[$color1\]$frame1\[$color2\] \u\[$color1\]@\[$color2\]${host} \[$color1\]$frame2\[$nc\] "

    export set_prompt_complete=true
}
